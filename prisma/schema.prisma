generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
}
 

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  favorites     Favorite[]
  visits        BarVisit[]
  inventoryImports InventoryImport[]
  shiftUsages       ShiftUsage[]
  inventorySnapshots InventorySnapshot[]
  role          UserRole  @default(PATRON)
}

enum UserRole {
  PATRON
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Owner {
  id                String         @id @default(cuid())
  email             String         @unique
  name              String
  password          String
  phone             String?
  emailVerified     DateTime?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  allowFreeListings Boolean        @default(false)
  
  bars              Bar[]
  subscription      Subscription?
  barLicenses       BarLicense[]
  promoRedemptions  PromoRedemption[]
  role              OwnerRole      @default(OWNER)
  categoryRequests  CategoryRequest[]
  passwordResets    OwnerPasswordReset[]
}

enum OwnerRole {
  OWNER
  ADMIN
}

model Subscription {
  id                   String   @id @default(cuid())
  ownerId              String   @unique
  plan                 SubscriptionPlan
  status               SubscriptionStatus @default(ACTIVE)
  paypalCustomerId     String?
  paypalSubscriptionId String?
  priceId              String?
  currentPeriodEnd     DateTime?
  trialEndsAt          DateTime?
  trialReminderSentAt  DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  canceledAt           DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  owner                Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

enum SubscriptionPlan {
  MONTHLY
  SIX_MONTH
  YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  INCOMPLETE
  PAST_DUE
  CANCELED
  PAUSED
}

model Bar {
  id                 String    @id @default(cuid())
  ownerId            String
  name               String
  slug               String    @unique
  description        String?   @db.Text
  address            String
  city               String
  cityNormalized     String
  state              String
  zipCode            String
  barType            String?   @default("Unclassified")
  checkInReward      String?
  subscriptionTier   SubscriptionTier @default(FREE)
  inventoryAddOnEnabled Boolean @default(false)
  neighborhood       String?
  neighborhoodNormalized String?
  latitude           Float
  longitude          Float
  phone              String?
  website            String?
  logo               String?
  photos             String[]  @default([])
  hours              Json?
  isActive           Boolean   @default(true)
  isPublished        Boolean   @default(false)
  publishedAt        DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  profileViews       Int       @default(0)
  searchAppearances  Int       @default(0)

  owner              Owner     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  offerings          Offering[]
  events             Event[]
  favorites          Favorite[]
  barLicenses        BarLicense[]
  inventoryItems     InventoryItem[]
  inventoryImports   InventoryImport[]
  inventorySnapshots InventorySnapshot[]
  shiftUsages        ShiftUsage[]
  visits             BarVisit[]
  varianceAlerts     VarianceAlert[]
  categoryRequests   CategoryRequest[]
  memberships        BarMembership[]
  followers          BarFollower[]
  boosts             Boost[]
  barProducts        BarProduct[]
  inventoryScanSessions InventoryScanSession[]
  inventoryCounts    InventoryCount[]
  patronSearchEvents PatronSearchEvent[] @relation("BarToPatronSearchEvents")
  barActions         BarAction[] @relation("BarToBarActions")

  @@index([cityNormalized])
  @@index([neighborhoodNormalized])
  @@index([latitude, longitude])
  @@index([isActive])
  @@index([isPublished])
  @@index([barType])
}

model Offering {
  id               String    @id @default(cuid())
  barId            String
  dayOfWeek        Int
  category         String
  customTitle      String?
  description      String?   @db.Text
  startTime        String
  endTime          String?
  recurrence       Recurrence @default(WEEKLY)
  startDate        DateTime?
  endDate          DateTime?
  tags             String[]  @default([])
  coverCharge      Decimal?  @db.Decimal(10, 2)
  prize            String?
  ageRestriction   Int?
  isActive         Boolean   @default(true)
  isSpecial        Boolean   @default(false)
  isNew            Boolean   @default(true)
  specialExpiresAt DateTime?
  newUntil         DateTime?
  expiresAt        DateTime?
  clickCount       Int       @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  bar              Bar       @relation(fields: [barId], references: [id], onDelete: Cascade)

  @@index([barId])
  @@index([dayOfWeek])
  @@index([category])
  @@index([isActive])
  @@index([isSpecial])
  @@index([isNew])
}

enum Recurrence {
  ONE_TIME
  WEEKLY
  MONTHLY
}

model Event {
  id               String    @id @default(cuid())
  barId            String
  title            String
  description      String?   @db.Text
  category         String?
  startDate        DateTime
  endDate          DateTime?
  startTime        String
  endTime          String?
  isRecurring      Boolean   @default(false)
  recurrenceRule   String?
  recurrence       Recurrence? @default(ONE_TIME)
  tags             String[]  @default([])
  isActive         Boolean   @default(true)
  isSpecial        Boolean   @default(true)
  isNew            Boolean   @default(true)
  specialExpiresAt DateTime?
  newUntil         DateTime?
  autoExpire       Boolean   @default(true)
  coverCharge      Decimal?  @db.Decimal(10, 2)
  prize            String?
  ageRestriction   Int?
  clickCount       Int       @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  bar              Bar       @relation(fields: [barId], references: [id], onDelete: Cascade)

  @@index([barId])
  @@index([startDate])
  @@index([isSpecial])
  @@index([isNew])
  @@index([isActive])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  barId     String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bar       Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  
  @@unique([userId, barId])
}

model ActivityCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  displayName String
  icon        String?
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}

enum CategoryRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model CategoryRequest {
  id               String                @id @default(cuid())
  barId            String
  ownerId          String
  requestedByEmail String
  requestedByName  String?
  category         String
  status           CategoryRequestStatus @default(PENDING)
  reviewedAt       DateTime?
  reviewedByEmail  String?
  createdAt        DateTime              @default(now())

  bar              Bar                   @relation(fields: [barId], references: [id], onDelete: Cascade)
  owner            Owner                 @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([barId])
  @@index([ownerId])
}

model OwnerPasswordReset {
  id        String   @id @default(cuid())
  ownerId   String
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  owner     Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
  @@index([expiresAt])
}

model PromoCode {
  id              String   @id @default(cuid())
  code            String   @unique
  description     String?
  isActive        Boolean  @default(true)
  maxRedemptions  Int?
  usedCount       Int      @default(0)
  expiresAt       DateTime?
  grantPlan       SubscriptionPlan?
  grantMonths     Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  redemptions     PromoRedemption[]
}

model PromoRedemption {
  id          String   @id @default(cuid())
  promoCodeId String
  ownerId     String
  redeemedAt  DateTime @default(now())

  promoCode   PromoCode @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)
  owner       Owner     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@unique([promoCodeId, ownerId])
}

model InventoryItem {
  id                 String   @id @default(cuid())
  barId              String
  name               String
  category           String?
  bottleSizeMl       Int
  startingQtyBottles Int      @default(0)
  costPerBottle      Decimal? @db.Decimal(10, 2)
  isActive           Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  bar                Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  snapshotItems      InventorySnapshotItem[]
  shiftUsageItems    ShiftUsageItem[]
  costingProfiles    CostingProfile[]
  varianceAlerts     VarianceAlert[]

  @@index([barId])
  @@index([category])
  @@index([isActive])
}

model InventoryImport {
  id           String   @id @default(cuid())
  barId        String
  fileName     String
  rowsImported Int      @default(0)
  mapping      Json?
  createdById  String?
  createdAt    DateTime @default(now())

  bar          Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  createdBy    User?    @relation(fields: [createdById], references: [id], onDelete: SetNull)

  @@index([barId])
  @@index([createdById])
}

model ShiftUsage {
  id          String   @id @default(cuid())
  barId       String
  userId      String?
  shiftTime   DateTime @default(now())
  notes       String?  @db.Text
  createdAt   DateTime @default(now())

  bar         Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  items       ShiftUsageItem[]

  @@index([barId])
  @@index([userId])
  @@index([shiftTime])
}

model ShiftUsageItem {
  id              String   @id @default(cuid())
  shiftUsageId    String
  inventoryItemId String
  quantityUsed    Decimal  @db.Decimal(5, 2)
  notes           String?  @db.Text

  shiftUsage      ShiftUsage    @relation(fields: [shiftUsageId], references: [id], onDelete: Cascade)
  inventoryItem   InventoryItem @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)

  @@index([shiftUsageId])
  @@index([inventoryItemId])
}

model InventorySnapshot {
  id           String   @id @default(cuid())
  barId        String
  userId       String?
  snapshotDate DateTime @default(now())
  notes        String?  @db.Text
  createdAt    DateTime @default(now())

  bar          Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  items        InventorySnapshotItem[]

  @@index([barId])
  @@index([userId])
  @@index([snapshotDate])
}

model InventorySnapshotItem {
  id              String   @id @default(cuid())
  snapshotId      String
  inventoryItemId String
  quantityOnHand  Decimal  @db.Decimal(7, 2)
  notes           String?  @db.Text

  snapshot        InventorySnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
  inventoryItem   InventoryItem     @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)
  bottlePhoto     BottlePhoto?

  @@index([snapshotId])
  @@index([inventoryItemId])
}

model BottlePhoto {
  id             String   @id @default(cuid())
  snapshotItemId String   @unique
  imageUrl       String
  estimatedPct   Decimal? @db.Decimal(5, 2)
  estimatedMl    Decimal? @db.Decimal(7, 2)
  modelVersion   String?
  createdAt      DateTime @default(now())

  snapshotItem   InventorySnapshotItem @relation(fields: [snapshotItemId], references: [id], onDelete: Cascade)
}

model CostingProfile {
  id              String   @id @default(cuid())
  inventoryItemId String
  pourSizeOz      Decimal  @db.Decimal(5, 2)
  menuPrice       Decimal  @db.Decimal(7, 2)
  costPerPour     Decimal  @db.Decimal(7, 4)
  marginPct       Decimal  @db.Decimal(5, 2)
  profitPerBottle Decimal  @db.Decimal(10, 2)
  createdAt       DateTime @default(now())

  inventoryItem   InventoryItem @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)

  @@index([inventoryItemId])
}

model VarianceAlert {
  id              String   @id @default(cuid())
  barId           String
  inventoryItemId String
  periodStart     DateTime
  periodEnd       DateTime
  expectedMl      Decimal  @db.Decimal(10, 2)
  observedMl      Decimal  @db.Decimal(10, 2)
  varianceMl      Decimal  @db.Decimal(10, 2)
  variancePct     Decimal  @db.Decimal(6, 2)
  severity        String
  reasonHint      String?
  createdAt       DateTime @default(now())

  bar             Bar             @relation(fields: [barId], references: [id], onDelete: Cascade)
  inventoryItem   InventoryItem   @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)

  @@index([barId])
  @@index([inventoryItemId])
  @@index([periodStart, periodEnd])
}

model BarLicense {
  id             String   @id @default(cuid())
  barId          String   @unique
  ownerId        String
  status         String   @default("ACTIVE")
  priceCents     Int      @default(2900)
  currency       String   @default("USD")
  billingCycle   String   @default("MONTHLY")
  externalId     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  bar            Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  owner          Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId])
  @@index([status])
}

model BarVisit {
  id                 String   @id @default(cuid())
  barId              String
  userId             String?  // Can be null for anonymous check-ins
  source             String   // 'qr_code', 'promo_code', 'manual', 'location'
  verificationMethod String   // 'qr_scan', 'promo_redemption', 'self_reported', 'geo_fence'
  clickId            String?  // Link to the BarClick that led to this visit
  promoCodeId        String?  // If they used a promo code
  metadata           Json?    // Additional data: receipt info, amount spent, etc.
  visitedAt          DateTime @default(now())
  createdAt          DateTime @default(now())

  bar                Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  user               User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([barId])
  @@index([userId])
  @@index([visitedAt])
  @@index([source])
  @@index([clickId])
}

enum SubscriptionTier {
  FREE
  PRO
  PREMIUM
}

enum BarMemberRole {
  OWNER
  MANAGER
  STAFF
}

model BarMembership {
  id        String        @id @default(cuid())
  barId     String
  userId    String
  role      BarMemberRole @default(MANAGER)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  bar Bar @relation(fields: [barId], references: [id], onDelete: Cascade)

  @@index([barId])
  @@index([userId])
}

model PatronSearchEvent {
  id        String   @id @default(cuid())
  barId     String?
  query     String?
  category  String?
  city      String?
  createdAt DateTime @default(now())

  bar Bar? @relation("BarToPatronSearchEvents", fields: [barId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([city])
}

model BarAction {
  id        String   @id @default(cuid())
  barId     String
  action    String
  createdAt DateTime @default(now())

  bar Bar @relation("BarToBarActions", fields: [barId], references: [id], onDelete: Cascade)

  @@index([barId])
  @@index([action])
}

model BarFollower {
  id          String   @id @default(cuid())
  barId       String
  patronEmail String
  createdAt   DateTime @default(now())

  bar Bar @relation(fields: [barId], references: [id], onDelete: Cascade)

  @@unique([barId, patronEmail])
}

model Boost {
  id          String   @id @default(cuid())
  barId       String
  eventId     String?
  startAt     DateTime
  endAt       DateTime
  budgetCents Int
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())

  bar     Bar          @relation(fields: [barId], references: [id], onDelete: Cascade)
  metrics BoostMetric[]

  @@index([barId])
}

model BoostMetric {
  id          String   @id @default(cuid())
  boostId     String
  date        DateTime
  impressions Int      @default(0)
  clicks      Int      @default(0)

  boost Boost @relation(fields: [boostId], references: [id], onDelete: Cascade)

  @@index([boostId])
  @@unique([boostId, date])
}

model Product {
  id        String  @id @default(cuid())
  name      String
  category  String
  unitType  String
  sizeMl    Int?
  upc       String? @unique
  isActive  Boolean @default(true)

  barProducts BarProduct[]
}

model BarProduct {
  id               String   @id @default(cuid())
  barId            String
  productId        String?
  customName       String?
  parLevel         Int?
  reorderThreshold Int?
  preferredVendor  String?
  isActive         Boolean  @default(true)

  bar      Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  product  Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  counts   InventoryCount[]
  detections InventoryScanDetection[]

  @@index([barId])
  @@index([productId])
}

model InventoryScanSession {
  id              String   @id @default(cuid())
  barId           String
  createdByUserId String?
  imageUrl        String?
  createdAt       DateTime @default(now())

  bar        Bar                      @relation(fields: [barId], references: [id], onDelete: Cascade)
  detections InventoryScanDetection[]

  @@index([barId])
}

model InventoryScanDetection {
  id               String   @id @default(cuid())
  sessionId        String
  productGuessText String
  productId        String?
  bbox             Json?
  confidence       Float    @default(0)
  remainingBucket  String?
  sizeMlGuess      Int?

  session InventoryScanSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  product BarProduct?          @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@index([sessionId])
}

model InventoryCount {
  id               String   @id @default(cuid())
  barId            String
  productId        String
  countedAt        DateTime @default(now())
  quantity         Decimal  @db.Decimal(10, 2)
  unit             String
  remainingPercent Int?
  remainingBucket  String?
  method           String
  confidence       Float?
  notes            String?

  bar    Bar        @relation(fields: [barId], references: [id], onDelete: Cascade)
  product BarProduct @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([barId])
  @@index([productId])
  @@index([countedAt])
}
